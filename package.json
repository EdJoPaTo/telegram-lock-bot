{
	"name": "telegram-lock-bot",
	"description": "Telegram Bot to handle a soft 'lock' / 'mutex' on something",
	"private": true,
	"version": "3.1.3",
	"license": "MIT",
	"repository": "EdJoPaTo/telegramLockBot",
	"author": {
		"name": "EdJoPaTo",
		"email": "lock-telegram-bot@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"start": "tsc --sourceMap && node --enable-source-maps dist/index.js",
		"test": "tsc --sourceMap && xo"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"dependencies": {
		"@edjopato/datastore": "^0.4.0",
		"grammy": "^1.3.4",
		"json-stable-stringify": "^1.0.1",
		"telegraf-middleware-console-time": "^2.1.0",
		"telegram-format": "^2.0.0"
	},
	"devDependencies": {
		"@grammyjs/types": "^2.2.6",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/node": "^16.0.0",
		"del-cli": "^4.0.0",
		"typescript": "^4.2.3",
		"xo": "^0.49.0"
	},
	"xo": {
		"semicolon": false,
		"rules": {
			"@typescript-eslint/naming-convention": "off",
			"ava/no-ignored-test-files": "off",
			"node/prefer-global/process": "off",
			"unicorn/prefer-node-protocol": "off",
			"import/extensions": [
				"error",
				"ignorePackages"
			]
		}
	}
}
